{
    "files.associations": {
        "*.shader": "shaderlab",
        "*.cginc": "hlsl",
        "*.hlsl": "hlsl",
        "*.compute": "hlsl",
        "*.asmdef": "json",
        "*.asmref": "json"
    },
    "files.exclude": {
        "**/.DS_Store": true,
        "**/.git": true,
        "**/Thumbs.db": true,
        "Library/": true,
        "Temp/": true,
        "Obj/": true,
        "Logs/": true,
        "UserSettings/": true,
        "MemoryCaptures/": true,
        "**/*.unityproj": true
    },
    "search.exclude": {
        "Library/": true,
        "Temp/": true,
        "Obj/": true,
        "Logs/": true,
        "Packages/": true,
        "**/*.meta": true
    },
    "editor.formatOnSave": true,
    "editor.defaultFormatter": null,
    "[csharp]": {
        "editor.defaultFormatter": "ms-dotnettools.csharp",
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "files.encoding": "utf8",
    "files.eol": "\n",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "dotnet.defaultSolution": "bone-to-peak.slnx"
}